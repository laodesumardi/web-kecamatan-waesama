<IfModule mod_rewrite.c>
    RewriteEngine On

    # Handle Angular and other frontend routes - send to index.html if file exists
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/api/
    RewriteCond %{DOCUMENT_ROOT}/index.html -f
    RewriteRule ^(.*)$ /index.html [L]

    # Handle Laravel routes - send to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/index.php -f
    RewriteRule ^(.*)$ /index.php [L]

    # If we have a public folder, redirect to it for assets
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/public/$1 -f
    RewriteRule ^(.*)$ /public/$1 [L]

    # Redirect to public folder for Laravel if it exists and we're not already there
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{DOCUMENT_ROOT}/public/index.php -f
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ /public/index.php [L]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Prevent access to sensitive files
<FilesMatch "\.(env|log|htaccess|htpasswd|ini|phps|fla|psd|log|sh)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevent access to vendor and other sensitive directories
RedirectMatch 403 ^/vendor/.*$
RedirectMatch 403 ^/storage/.*$
RedirectMatch 403 ^/bootstrap/cache/.*$
RedirectMatch 403 ^/config/.*$
RedirectMatch 403 ^/database/.*$